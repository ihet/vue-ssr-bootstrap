    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "debug Dev Server",
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "restart": true,
            "protocol": "inspector",
            "sourceMaps": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "args": [
                "${workspaceFolder}/server/dev-server.ts"
            ]
        }
    ]
}